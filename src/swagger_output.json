          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/user/{id}": {
      "get": {
        "tags": [
          "Users"
        ],
        "description": "Endpoint para pesquisar um usuário específico",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          }
        }
      },
      "patch": {
        "tags": [
          "Users"
        ],
        "description": "Editar/Atualizar os dados de um usuário específico (ID)",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "parameterName",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "example": "Zé Colméia"
                },
                "email": {
                  "type": "string",
                  "example": "ze@colmeia.com.br"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    },
    "/api/user": {
      "post": {
        "tags": [
          "Users"
        ],
        "description": "Endpoint para criar usuários",
        "parameters": [
          {
            "name": "parameterName",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "example": "Zé Colméia"
                },
                "email": {
                  "type": "string",
                  "example": "ze@colmeia.com.br"
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    },
